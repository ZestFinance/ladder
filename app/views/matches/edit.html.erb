<div class="page-header">
  <h1>And the winner is...</h1>
</div>

<%= form_for @match, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label "Enter Match Winner", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :winner_id, options_from_collection_for_select(@participants, :id, :fullname) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Rankings", class: 'btn btn-primary', data: {confirm: "This will update the ladder rankings.  Are you sure?"} %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  matches_path, :class => 'btn' %>
    </div>

<% end %>

